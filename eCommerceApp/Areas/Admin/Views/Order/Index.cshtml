
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using eCommerce.Entities.Concrete

@model IEnumerable<ProductOrder>

<div class="container">
    <br />

    <div style="width:90%; margin:0 auto;">
        <div style="text-align:center;">
            <h2><i class="fa-solid fa-list-timeline"></i>  Sipariş Listesi</h2>
            
        </div>
        @*<div col-8>
                <a class="btn btn-primary" asp-action="AddUpdate" asp-controller="Product" asp-area="Admin">Ürün Ekle</a>
            </div>*@



        <br />
        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                   
                    <th>Sipariş ID</th>
                    <th>Müşteri Ad Soyad</th>
                    <th>Ürün Fiyat</th>
                    <th>İşlemler</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.OrderPrice</td>
                            <td>
                                <a asp-area="Customer" asp-controller="Order" asp-action="AddUpdate" class="btn btn-success" asp-route-id="@item.Id">
                                    <i class="bi bi-pen"></i> Güncelle
                                </a>
                                 <a onclick="return confirm('Silmek istediğinize emin misiniz ?')" asp-controller="Order" asp-action="Delete" class="btn btn-primary" asp-route-id="@item.Id">
                                    <i class="bi bi-file-earmark-x"></i> Sil
                                </a>
                            
                            
                            </td>

                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>


