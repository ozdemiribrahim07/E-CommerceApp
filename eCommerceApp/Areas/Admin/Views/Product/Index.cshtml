@using eCommerce.Entities.Concrete

@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />

    <div style="width:90%; margin:0 auto;">
        <div style="text-align:center;">
            <h2><i class="fa-solid fa-list"></i> Ürün Listesi</h2>

        </div>
        <div col-8>
            <a class="btn btn-primary" asp-action="AddUpdate" asp-controller="Product" asp-area="Admin">Ürün Ekle</a>
        </div>



        <br />
        
            </div>


            <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
            <tr>
            <th>Ürün Resmi</th>
            <th>Ürün Adı</th>
            <th>Ürün Açıklaması</th>
            <th>Ürün Fiyat</th>
            <th>İşlemler</th>

            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
            <tr>

            <td> <img src="@item.ProductImage" width="80px" /></td>
            <td>@item.ProductName</td>
            <td>@item.ProductDesc.Substring(0, item.ProductDesc.Substring(0, 250).LastIndexOf(" "))..</td>
            <td>@item.ProductPrice.ToString("c")</td>
            <td>
            <a asp-controller="Product" asp-action="AddUpdate" class="btn btn-success" asp-route-id="@item.Id">
            <i class="bi bi-pen"></i> Güncelle
            </a>
            <a asp-controller="Product" asp-action="Delete" class="btn btn-primary" asp-route-id="@item.Id">
            <i class="bi bi-file-earmark-x"></i> Sil
            </a>


            </td>

            </tr>
            }
            </tbody>
            </table>
        </div>
    </div>
</div>

