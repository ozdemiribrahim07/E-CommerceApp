@using eCommerce.Entities.Concrete
@model ShopCart

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<br />
<form method="post">
    <div class="row">
        <div style="text-align:center;">
            <h2> <i class="fa-solid fa-cart-plus"></i> Sepetim</h2>
             <hr />
             <br />
            
       
        </div>
       
        <div class="col-4">
            <img src="@Model.Product.ProductImage" width="300" height="400" />
            <input type="hidden" asp-for="ProductId" />
        </div>
        

        <div class="col-8">
            <div class="row">
                <h2>  @Model.Product.ProductName </h2>


                <br />
                <br />
                <p>@Model.Product.ProductDesc.Substring(0, Model.Product.ProductDesc.Substring(0, 250).LastIndexOf(" "))..</p>
                <br />
                <br />
                <br />
                <h2> @Model.Product.ProductPrice.ToString("0.00 ₺")</h2>

                <br />
                <br />
                <br />
                <div class="form-control">

                    <h3>Adet</h3>
                    <input asp-for="Count" class="form-control"></input>
                    <span asp-validation-for="Count" class="text-danger"></span>

                </div>

                <br />
                <br />

                <div class="form-control">

                    <button class="btn btn-success" asp-action="Index" asp-controller="Home">Listeye Geri Dön</button>
                    <button class="btn btn-dark" type="submit">Sepete Ekle</button>


                </div>

            </div>

        </div>



        <div class="row-6">
            <br />
            <br />
            <div class="row">
                <div style="text-align:center">
                    <h1>Ürün Açıklaması</h1><h4> @Model.Product.Category.CategoryName</h4>
                    <br />
                </div>

                <p>@Model.Product.ProductDesc</p>

            </div>

        </div>

    </div>


</form>

