@model eCommerce.Entities.VMs.ShopCartVM

<br />
<div style="text-align:center;">
    <h2> <i class="fa-solid fa-bag-shopping"></i> Sipariş Özeti</h2>
</div>
<br />
<form method="post">
    <div class="container">
        <article class="card">
            <header class="card-header"> Sipariş Listem </header>
            <div class="card-body">

                <article class="card">
                    <div class="card-body row">
                        <div class="col"> <strong>İsim Soyisim:</strong> <br>@Model.ProductOrder.Name </div>
                        <div class="col"> <strong>Adres:</strong> <br> @Model.ProductOrder.FullAdress   </div>
                        <div class="col"> <strong>Telefon:</strong> <br><i class="fa fa-phone"></i>  @Model.ProductOrder.Phone </div>
                        <div class="col"> <strong>Sipariş Verilme Tarihi :</strong> <br> @Model.ProductOrder.OrderDate </div>
                    </div>
                </article>
                <br />
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">Kargo Bilgileri:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Name</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="ProductOrder.Name" class="form-control" />
                                    <span asp-validation-for="ProductOrder.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Phone</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="ProductOrder.Phone" class="form-control" />
                                    <span asp-validation-for="ProductOrder.Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Street Address</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="ProductOrder.FullAdress" class="form-control" />
                                    <span asp-validation-for="ProductOrder.FullAdress" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <br />
                <div class="col-12">
                    <ul class="list-group mb-3">
                        @foreach (var item in Model.CartList)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <div>
                                    <h6 class="my-0">@item.Product.ProductName</h6>
                                    <small class="text-muted">Adet : @item.Count</small>
                                </div>
                                <span class="text-muted">@((item.Price).ToString("c"))</span>

                            </li>

                        }

                    </ul>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-8 pt-2">
                            <p style="color:maroon; font-size:14px"><h3 class="text-primary">Toplam (₺) : @Model.ProductOrder.OrderPrice.ToString("c")</h3></p>


                        </div>

                        <div class="col-12 col-md-4 py-4">

                            <button type="submit" value="Onayla" class="btn- btn-success form-control">Sipariş Onayla</button>

                        </div>



                    </div>


                </div>

                <hr>

                <a asp-action="Index" asp-area="Customer" asp-controller="ShopCart" class="btn btn-warning" data-abc="true"> <i class="fa fa-chevron-left"></i> Siparişlere Geri Dön</a>
            </div>
        </article>
    </div>
</form>